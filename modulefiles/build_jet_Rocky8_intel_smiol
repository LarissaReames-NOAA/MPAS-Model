#%Module

proc ModulesHelp { } {
   puts stderr "This module loads libraries for building SRW on"
   puts stderr "the NOAA RDHPC machine JET using Intel-2022.1.2"
}

module-whatis "Loads libraries needed for building MPAS on JET running Rocky Linux 8"

module purge

module load cmake/3.28.1
module load gnu

module load intel/2023.2.0
module load impi/2023.2.0

module load pnetcdf/1.12.3
module load szip
module load hdf5parallel/1.10.5
module load netcdf-hdf5parallel/4.7.0

setenv PNETCDF /apps/pnetcdf/1.12.3/intel_2023.2.0-impi

setenv CMAKE_C_COMPILER mpiicc
setenv CMAKE_CXX_COMPILER mpiicpc
setenv CMAKE_Fortran_COMPILER mpiifort
